{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Edge",
            "port": 9222,
            "request": "attach",
            "type": "msedge",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Next.js Debug",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "sudodev"
            ],
            "port": 9229,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Next.js Frontend",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}