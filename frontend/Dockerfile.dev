# Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install dependencies first (before volume mount)
COPY package.json package-lock.json* ./
RUN npm install --legacy-peer-deps

# Copy source code (will be overridden by volume mount in dev mode)
COPY . .

EXPOSE 3000

# Use npm run dev which will work even if node_modules is mounted
CMD ["npm", "run", "dev"]
